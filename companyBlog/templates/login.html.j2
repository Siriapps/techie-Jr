{% extends "base.html.j2" %}
{% block content %}
<style>
    @media (max-width:767px) {
        #loginform {
            width: 300px;
        }
    }
    @media (min-width:768px) {
        #loginform {
            width: 465px;
        }
    }
</style>
<div class="container">
    <form method="POST" class="mx-auto my-2 px-4 py-4 shadow mb-5 bg-white rounded" id="loginform">
    {# This hidden_tag is a CSRF security feature. #}
    {{ form.hidden_tag() }}
      <fieldset class="form-group row my-4">
        <legend class="mb-4">Login</legend>

      <div class="form-group row my-4">
        <div class="col-sm-4 ">{{form.email.label(class="col-form-label")}}<span style="color:red;">*</span></div>
        <div class="col-sm-7">{{form.email(class="form-control")}}</div>
        {% for error in form.email.errors %}
            <span style="color: red;">{{error}}</span>
        {% endfor %}
      </div>
      <div class="form-group row my-4">
        <div class="col-sm-4 ">{{form.password.label(class="col-form-label")}}<span style="color:red;">*</span></div>

        <div class="col-sm-7">{{form.password(class="form-control")}}</div>

      </div>
      </fieldset>
      {{ form.submit(class="btn btn-dark text-warning") }}
      <small class="text-muted ml-2">
          <a href="{{ url_for('users.reset_request') }}">Forgot Password?</a>
      </small>

    </form>
</div>
{% endblock %}
