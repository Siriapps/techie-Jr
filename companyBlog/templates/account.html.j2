{% extends "base.html.j2" %}
{% block content %}
<div class="jumbotron mt-3">
  <div align='center'>
    <h1>{{current_user.username}}</h1>
    <h5>{{email}}</h5>
    <img align='center' src="{{profile_image}}" width="100px" height="100px">
  </div>
</div>

<div class="container">
  <form method="post" enctype="multipart/form-data">
    {{form.hidden_tag()}}
    <div class="form-group row my-4">
      <div class="col-sm-5 ">{{ form.username.label(class="col-form-label") }}</div>
      <div class="col-sm-7">{{ form.username(class="form-control") }}
          {% for error in form.username.errors %}
            <span style="color: red;">{{error}}</span>
          {% endfor %}
      </div><br>
    </div>
    <div class="form-group row my-4">
      <div class="col-sm-5 ">{{ form.email.label(class="col-form-label") }}</div>
      <div class="col-sm-7">{{ form.email(class="form-control") }}
          {% for error in form.email.errors %}
              <span style="color: red;">{{error}}</span>
          {% endfor %}
      </div><br>
    </div>

    <div class="form-group row my-4">
      <div class="col-sm-5 ">
        {{form.picture.label()}}
      </div>

      <div class="col-sm-7">
        {{form.picture()}}<br>
        <p class="text-muted" style="font-size:16px;">.jpg and .png are only allowed</p>
        {% for error in form.picture.errors %}
          <span style="color: red;">{{error}}</span>
        {% endfor %}
      </div><br>
    </div>

    {{ form.submit(class="btn btn-dark text-warning") }}
  </form>
</div>
{% endblock %}
